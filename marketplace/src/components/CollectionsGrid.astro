---
import collections from '../data/collections.json';

interface Props {
  featured?: boolean;
  limit?: number;
}

const { featured = false, limit } = Astro.props;

let displayCollections = collections.collections;
if (featured) {
  displayCollections = displayCollections.filter(c => c.featured);
}
if (limit) {
  displayCollections = displayCollections.slice(0, limit);
}
---

<style>
  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .collection-card {
    background: white;
    border: 2px solid var(--brand-light-gray);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .collection-card:hover {
    border-color: var(--brand-orange);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    transform: translateY(-2px);
  }

  .collection-header {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .collection-icon {
    font-size: 2rem;
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10px;
    background: var(--brand-light);
  }

  .collection-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    font-family: 'Poppins', Arial, sans-serif;
  }

  .collection-description {
    color: var(--brand-mid-gray);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  .collection-plugins {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: auto;
  }

  .plugin-count {
    background: var(--brand-light);
    color: var(--brand-orange);
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.8rem;
    font-weight: 600;
  }

  .install-btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--brand-orange);
    color: white;
    border: none;
    border-radius: 6px;
    font-size: 0.85rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s;
    font-family: 'Poppins', Arial, sans-serif;
  }

  .install-btn:hover {
    background: var(--brand-orange-dark);
  }

  .collection-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid var(--brand-light-gray);
  }

  @media (max-width: 768px) {
    .collections-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<div class="collections-grid">
  {displayCollections.map(collection => (
    <div class="collection-card" data-collection-id={collection.id}>
      <div class="collection-header">
        <span class="collection-icon" style={`background: ${collection.color}20;`}>
          {collection.icon}
        </span>
        <h3 class="collection-title">{collection.name}</h3>
      </div>

      <p class="collection-description">{collection.description}</p>

      <div class="collection-footer">
        <span class="plugin-count">{collection.plugins.length} plugins</span>
        <button
          class="install-btn"
          data-plugins={collection.plugins.join(',')}
          onclick={`copyInstallCommand('${collection.plugins.join(',')}')`}
        >
          <span>ðŸ“‹</span> Copy Install
        </button>
      </div>
    </div>
  ))}
</div>

<script is:inline>
  function copyInstallCommand(plugins) {
    const pluginList = plugins.split(',');
    const command = pluginList.map(p =>
      `/plugin install ${p}@claude-code-plugins-plus`
    ).join('\n');

    navigator.clipboard.writeText(command).then(() => {
      // Show toast notification
      const toast = document.createElement('div');
      toast.className = 'copy-toast';
      toast.textContent = `Copied install commands for ${pluginList.length} plugins!`;
      toast.style.cssText = `
        position: fixed;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        background: #1a1a1a;
        color: white;
        padding: 1rem 1.5rem;
        border-radius: 8px;
        font-size: 0.9rem;
        z-index: 1000;
        animation: fadeInOut 2.5s ease-in-out;
      `;
      document.body.appendChild(toast);
      setTimeout(() => toast.remove(), 2500);
    });
  }
</script>

<style is:global>
  @keyframes fadeInOut {
    0% { opacity: 0; transform: translateX(-50%) translateY(20px); }
    15% { opacity: 1; transform: translateX(-50%) translateY(0); }
    85% { opacity: 1; transform: translateX(-50%) translateY(0); }
    100% { opacity: 0; transform: translateX(-50%) translateY(-20px); }
  }
</style>
