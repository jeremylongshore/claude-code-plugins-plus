/**
 * Plugin Detail Page
 *
 * Displays comprehensive plugin information including:
 * - Metadata (description, version, category, keywords)
 * - Installation instructions
 * - Skills with trigger phrases (if applicable)
 * - "Works well with" recommendations
 * - Status, badges, last updated
 *
 * Bead ID: claude-code-plugins-ida
 */

import Layout from '../../layouts/Layout.astro';
import fs from 'node:fs';
import path from 'node:path';

// Load catalog and conflicts data
const catalogPath = path.join(process.cwd(), '../marketplace/src/data/catalog.json');
const conflictsPath = path.join(process.cwd(), '../marketplace/src/data/conflicts.json');

const catalog = JSON.parse(fs.readFileSync(catalogPath, 'utf8'));
const conflicts = JSON.parse(fs.readFileSync(conflictsPath, 'utf8'));

// Generate static paths for all plugins
export async function getStaticPaths() {
    const catalogPath = path.join(process.cwd(), '../marketplace/src/data/catalog.json');
    const catalog = JSON.parse(fs.readFileSync(catalogPath, 'utf8'));

    return catalog.plugins.map((plugin: any) => ({
        params: { slug: plugin.slug },
        props: { plugin }
    }));
}

const { plugin } = Astro.props;

// Read skill details if plugin has skills
let skills: any[] = [];
if (plugin.hasSkills) {
    try {
        const rootPath = path.join(process.cwd(), '..');
        const pluginPath = path.join(rootPath, plugin.sourcePath);
        const skillsDir = path.join(pluginPath, 'skills');

        if (fs.existsSync(skillsDir)) {
            const skillFolders = fs.readdirSync(skillsDir);

            for (const folder of skillFolders) {
                const skillMdPath = path.join(skillsDir, folder, 'SKILL.md');
                if (fs.existsSync(skillMdPath)) {
                    const content = fs.readFileSync(skillMdPath, 'utf8');

                    // Parse frontmatter
                    const frontmatterMatch = content.match(/^---\n([\s\S]*?)\n---/);
                    let frontmatter: any = {};
                    let body = content;

                    if (frontmatterMatch) {
                        const yaml = frontmatterMatch[1];
                        body = content.slice(frontmatterMatch[0].length);

                        // Simple YAML parser for our needs
                        const lines = yaml.split('\n');
                        let currentKey = '';
                        let currentValue = '';

                        for (const line of lines) {
                            if (line.match(/^[a-z-]+:/)) {
                                if (currentKey) {
                                    frontmatter[currentKey] = currentValue.trim();
                                }
                                const [key, ...valueParts] = line.split(':');
                                currentKey = key.trim();
                                currentValue = valueParts.join(':').trim();
                            } else if (line.startsWith('- ')) {
                                if (!frontmatter[currentKey]) {
                                    frontmatter[currentKey] = [];
                                }
                                if (Array.isArray(frontmatter[currentKey])) {
                                    frontmatter[currentKey].push(line.slice(2).trim());
                                }
                            } else if (currentKey && line.trim()) {
                                currentValue += ' ' + line.trim();
                            }
                        }

                        if (currentKey) {
                            frontmatter[currentKey] = currentValue.trim();
                        }
                    }

                    // Extract trigger phrases from "When to Use This Skill" section
                    const triggerPhrases: string[] = [];
                    const whenToUseMatch = body.match(/## When to Use This Skill\s+([\s\S]*?)(?=\n##|$)/);
                    if (whenToUseMatch) {
                        const section = whenToUseMatch[1];
                        const bullets = section.match(/^[-*]\s+(.+)$/gm);
                        if (bullets) {
                            bullets.forEach((bullet: string) => {
                                const phrase = bullet.replace(/^[-*]\s+/, '').trim();
                                triggerPhrases.push(phrase);
                            });
                        }
                    }

                    // Extract examples
                    const examples: string[] = [];
                    const examplesMatch = body.match(/### Example \d+: (.+)/g);
                    if (examplesMatch) {
                        examples.push(...examplesMatch.map((ex: string) => ex.replace(/### Example \d+: /, '')));
                    }

                    skills.push({
                        name: frontmatter.name || folder,
                        description: frontmatter.description || '',
                        allowedTools: Array.isArray(frontmatter['allowed-tools'])
                            ? frontmatter['allowed-tools']
                            : [],
                        version: frontmatter.version || '1.0.0',
                        triggerPhrases,
                        examples,
                        body: body.trim()
                    });
                }
            }
        }
    } catch (error) {
        console.warn(`Warning: Could not read skills for ${plugin.slug}:`, error);
    }
}

// Find "Works well with" recommendations
const worksWellWith: string[] = [];
const recommendationCategories = Object.entries(conflicts.recommendations || {});

for (const [category, pluginList] of recommendationCategories) {
    if (Array.isArray(pluginList) && pluginList.includes(plugin.slug)) {
        // Add other plugins from this recommendation category
        pluginList.forEach((slug: string) => {
            if (slug !== plugin.slug && !worksWellWith.includes(slug)) {
                worksWellWith.push(slug);
            }
        });
    }
}

// Find complementary plugins from conflicts (positive severity)
conflicts.conflicts.forEach((conflict: any) => {
    if (conflict.severity === 'positive' && conflict.plugins.includes(plugin.slug)) {
        conflict.plugins.forEach((slug: string) => {
            if (slug !== plugin.slug && !worksWellWith.includes(slug)) {
                worksWellWith.push(slug);
            }
        });
    }
});

// Load plugin data for "works well with" section
const recommendedPlugins = catalog.plugins.filter((p: any) =>
    worksWellWith.includes(p.slug)
);

// Helper functions
function formatDate(epoch: number): string {
    if (!epoch) return '';
    const days = Math.floor((Date.now() / 1000 - epoch) / (60 * 60 * 24));
    if (days === 0) return 'Today';
    if (days === 1) return 'Yesterday';
    if (days < 7) return `${days} days ago`;
    if (days < 30) return `${Math.floor(days / 7)} weeks ago`;
    if (days < 365) return `${Math.floor(days / 30)} months ago`;
    return `${Math.floor(days / 365)} years ago`;
}

function getStatusColor(status: string): string {
    switch (status) {
        case 'active': return '#22c55e';
        case 'maintained': return '#eab308';
        case 'stale': return '#94a3b8';
        default: return '#94a3b8';
    }
}

function getStatusLabel(status: string): string {
    switch (status) {
        case 'active': return 'Active (updated <30 days)';
        case 'maintained': return 'Maintained (updated <90 days)';
        case 'stale': return 'Stale (updated ‚â•90 days)';
        default: return 'Unknown';
    }
}
