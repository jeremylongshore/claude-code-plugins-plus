// Claude Code Plugins Marketplace - Homepage
import fs from 'node:fs';
import path from 'node:path';

// Load catalog data for featured plugins
const catalogPath = path.join(process.cwd(), 'src/data/catalog.json');
const catalog = JSON.parse(fs.readFileSync(catalogPath, 'utf8'));

// Get featured plugins (up to 6) - prioritize: featured > hasSkills > active > new
const featuredPlugins = catalog.plugins
    .filter((p: any) => p.isFeatured || p.hasSkills)
    .sort((a: any, b: any) => {
        // Featured first
        if (a.isFeatured && !b.isFeatured) return -1;
        if (!a.isFeatured && b.isFeatured) return 1;

        // Skills plugins next
        if (a.hasSkills && !b.hasSkills) return -1;
        if (!a.hasSkills && b.hasSkills) return 1;

        // Active status preferred
        if (a.status === 'active' && b.status !== 'active') return -1;
        if (a.status !== 'active' && b.status === 'active') return 1;

        // Most recent
        return (b.lastUpdatedEpoch || 0) - (a.lastUpdatedEpoch || 0);
    })
    .slice(0, 6);

// Helper functions
function formatDate(epoch: number): string {
    if (!epoch) return '';
    const days = Math.floor((Date.now() / 1000 - epoch) / (60 * 60 * 24));
    if (days === 0) return 'Today';
    if (days === 1) return 'Yesterday';
    if (days < 7) return `${days} days ago`;
    if (days < 30) return `${Math.floor(days / 7)} weeks ago`;
    if (days < 365) return `${Math.floor(days / 30)} months ago`;
    return `${Math.floor(days / 365)} years ago`;
}

function getStatusColor(status: string): string {
    switch (status) {
        case 'active': return '#22c55e';
        case 'maintained': return '#eab308';
        case 'stale': return '#94a3b8';
        default: return '#94a3b8';
    }
}
