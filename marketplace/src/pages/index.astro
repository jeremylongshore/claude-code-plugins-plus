    <script is:inline define:vars={{ pluginsData: catalog.plugins }}>
        // Smooth scroll for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

        // Intersection Observer for fade-in animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        document.querySelectorAll('.feature-card, .category-item, .process-step').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'all 0.6s cubic-bezier(0.4, 0, 0.2, 1)';
            observer.observe(el);
        });

        // Copy install command on click
        document.querySelector('.install-command').addEventListener('click', function() {
            const text = this.textContent;
            navigator.clipboard.writeText(text).then(() => {
                const original = this.textContent;
                this.textContent = '✓ Copied to clipboard!';
                this.style.color = 'var(--brand-green)';
                setTimeout(() => {
                    this.textContent = original;
                    this.style.color = '';
                }, 2000);
            });
        });

        // ========================================
        // SEARCH FUNCTIONALITY
        // ========================================
        const searchInput = document.getElementById('plugin-search');
        const clearBtn = document.getElementById('clear-search');
        const searchResults = document.getElementById('search-results');

        // Catalog data embedded for search
        const plugins = pluginsData;

        let searchTimeout;

        function performSearch(query) {
            const q = query.toLowerCase().trim();

            if (!q) {
                searchResults.classList.remove('show');
                clearBtn.style.display = 'none';
                return;
            }

            clearBtn.style.display = 'block';

            // Filter plugins
            const results = plugins.filter(plugin => {
                return (
                    plugin.displayName?.toLowerCase().includes(q) ||
                    plugin.description?.toLowerCase().includes(q) ||
                    plugin.category?.toLowerCase().includes(q) ||
                    plugin.tags?.some(tag => tag.toLowerCase().includes(q)) ||
                    plugin.slug?.toLowerCase().includes(q)
                );
            }).slice(0, 10); // Limit to top 10 results

            // Display results
            if (results.length === 0) {
                searchResults.innerHTML = '<div class="search-no-results">No plugins found matching "' + query + '"</div>';
                searchResults.classList.add('show');
            } else {
                searchResults.innerHTML = results.map(plugin => `
                    <a href="/plugins/${plugin.slug}" class="search-result-item">
                        <div class="search-result-title">${plugin.displayName || plugin.slug}</div>
                        <div class="search-result-desc">${plugin.description || 'No description available'}</div>
                        <div class="search-result-meta">
                            <span>${plugin.category || 'uncategorized'}</span>
                            ${plugin.hasSkills ? '<span>🎯 ' + (plugin.skillCount || 0) + ' skill' + (plugin.skillCount > 1 ? 's' : '') + '</span>' : ''}
                        </div>
                    </a>
                `).join('');
                searchResults.classList.add('show');
            }
        }

        // Search on input
        searchInput.addEventListener('input', (e) => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => {
                performSearch(e.target.value);
            }, 300);
        });

        // Clear search
        clearBtn.addEventListener('click', () => {
            searchInput.value = '';
            searchResults.classList.remove('show');
            clearBtn.style.display = 'none';
            searchInput.focus();
        });

        // Close results when clicking outside
        document.addEventListener('click', (e) => {
            if (!searchInput.contains(e.target) && !searchResults.contains(e.target) && !clearBtn.contains(e.target)) {
                searchResults.classList.remove('show');
            }
        });

        // Keep results open when clicking inside
        searchResults.addEventListener('click', (e) => {
            if (e.target.classList.contains('search-result-item') || e.target.closest('.search-result-item')) {
                // Let the link work normally
            } else {
                e.stopPropagation();
            }
        });

        // ESC key to close
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                searchResults.classList.remove('show');
            }
        });
    </script>
