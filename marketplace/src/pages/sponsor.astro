    <style>
      /* Import global styles */
      @import url('../styles/global.css');
      @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800;900&family=Lora:wght@400;500;600&display=swap');

      /* CSS Variables for Anthropic Brand Colors */
      :root {
        /* Main Colors */
        --brand-dark: #141413;
        --brand-light: #faf9f5;
        --brand-mid-gray: #b0aea5;
        --brand-light-gray: #e8e6dc;

        /* Accent Colors */
        --brand-orange: #d97757;
        --brand-blue: #6a9bcc;
        --brand-green: #788c5d;

        /* Derived Colors */
        --brand-orange-dark: #c45e3e;
        --brand-orange-light: #e8937a;

        --transition-smooth: cubic-bezier(0.4, 0, 0.2, 1);
      }

      /* Anthropic theme for sponsor page */
      body {
        font-family: 'Lora', Georgia, serif;
        background: var(--brand-light);
        color: var(--brand-dark);
      }

      h1, h2, h3, h4, h5, h6,
      .cta-primary, .cta-secondary, .pricing-tier, .pricing-name,
      .stat-number, .roadmap-tier, .faq-question {
        font-family: 'Poppins', Arial, sans-serif;
      }

      /* Hero Section */
      .sponsor-hero {
        background: var(--brand-light);
        padding: 4rem 1rem;
        text-align: center;
        border-bottom: 1px solid var(--brand-light-gray);
      }

      .sponsor-hero-content {
        max-width: 56rem;
        margin: 0 auto;
      }

      .sponsor-hero h1 {
        font-size: clamp(2.5rem, 5vw, 3rem);
        font-weight: 800;
        line-height: 1.2;
        color: var(--brand-dark);
        margin-bottom: 1.5rem;
      }

      .sponsor-hero-description {
        font-size: 1.25rem;
        line-height: 1.6;
        color: var(--brand-mid-gray);
        max-width: 42rem;
        margin: 0 auto 2rem;
      }

      .sponsor-hero-stats {
        display: flex;
        gap: 2rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid #E5E5E5;
      }

      .stat-item {
        text-align: center;
      }

      .stat-number {
        font-size: 2.5rem;
        font-weight: 900;
        color: var(--brand-orange);
        line-height: 1;
      }

      .stat-label {
        font-size: 0.875rem;
        color: var(--brand-mid-gray);
        margin-top: 0.5rem;
      }

      /* Primary CTA */
      .cta-primary {
        display: inline-block;
        padding: 1rem 2rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--brand-light);
        background: var(--brand-orange);
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .cta-primary:hover {
        background: var(--brand-orange-dark);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(217, 119, 87, 0.2);
      }

      .cta-secondary {
        display: inline-block;
        padding: 1rem 2rem;
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--brand-dark);
        background: transparent;
        border: 2px solid var(--brand-light-gray);
        border-radius: 0.5rem;
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .cta-secondary:hover {
        border-color: var(--brand-orange);
        color: var(--brand-orange);
      }

      .hero-ctas {
        display: flex;
        gap: 1rem;
        justify-content: center;
        flex-wrap: wrap;
      }

      /* Container */
      .container {
        max-width: 75rem;
        margin: 0 auto;
        padding: 0 1rem;
      }

      /* Section */
      .section {
        padding: 4rem 1rem;
        background: var(--brand-light);
      }

      .section-alt {
        background: var(--brand-light-gray);
      }

      .section-header {
        text-align: center;
        margin-bottom: 3rem;
      }

      .section-title {
        font-size: clamp(2rem, 4vw, 2.5rem);
        font-weight: 800;
        color: var(--brand-dark);
        margin-bottom: 1rem;
      }

      .section-description {
        font-size: 1.125rem;
        color: var(--brand-mid-gray);
        max-width: 42rem;
        margin: 0 auto;
      }

      /* Pricing Tiers */
      .pricing-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
        gap: 2rem;
        max-width: 75rem;
        margin: 0 auto;
      }

      .pricing-card {
        background: var(--brand-light);
        border: 2px solid var(--brand-light-gray);
        border-radius: 1rem;
        padding: 2rem;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
      }

      .pricing-card:hover {
        border-color: var(--brand-orange);
        transform: translateY(-4px);
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      }

      .pricing-card.featured {
        border-color: var(--brand-orange);
        position: relative;
        background: linear-gradient(180deg, var(--brand-light) 0%, #faf5ee 100%);
      }

      .pricing-card.featured::before {
        content: "Most Popular";
        position: absolute;
        top: -1rem;
        left: 50%;
        transform: translateX(-50%);
        background: var(--brand-orange);
        color: var(--brand-light);
        padding: 0.375rem 1rem;
        border-radius: 2rem;
        font-size: 0.75rem;
        font-weight: 700;
        letter-spacing: 0.05em;
        text-transform: uppercase;
      }

      .pricing-tier {
        font-size: 0.875rem;
        font-weight: 700;
        color: var(--brand-orange);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }

      .pricing-name {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 1rem;
      }

      .pricing-price {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
      }

      .price-amount {
        font-size: 3rem;
        font-weight: 900;
        color: var(--brand-dark);
      }

      .price-currency {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--brand-mid-gray);
      }

      .price-period {
        font-size: 1rem;
        color: var(--brand-mid-gray);
      }

      .pricing-description {
        color: var(--brand-mid-gray);
        margin-bottom: 1.5rem;
        padding-bottom: 1.5rem;
        border-bottom: 1px solid var(--brand-light-gray);
      }

      .pricing-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2rem 0;
        flex-grow: 1;
      }

      .pricing-features li {
        padding: 0.75rem 0;
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        color: var(--brand-dark);
        font-size: 0.875rem;
        line-height: 1.5;
      }

      .pricing-features li::before {
        content: "‚úì";
        color: var(--brand-green);
        font-weight: 700;
        font-size: 1.125rem;
        flex-shrink: 0;
      }

      .pricing-cta {
        display: block;
        width: 100%;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: var(--brand-light);
        background: var(--brand-orange);
        border: none;
        border-radius: 0.5rem;
        text-align: center;
        text-decoration: none;
        transition: all 0.2s ease;
      }

      .pricing-cta:hover {
        background: var(--brand-orange-dark);
      }

      .pricing-card:not(.featured) .pricing-cta {
        background: transparent;
        color: var(--brand-orange);
        border: 2px solid var(--brand-orange);
      }

      .pricing-card:not(.featured) .pricing-cta:hover {
        background: var(--brand-orange);
        color: var(--brand-light);
      }

      /* Comparison Table */
      .comparison-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 2rem;
        background: var(--brand-light);
        border: 1px solid var(--brand-light-gray);
        border-radius: 1rem;
        overflow: hidden;
      }

      .comparison-table th,
      .comparison-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid var(--brand-light-gray);
      }

      .comparison-table th {
        background: var(--brand-light-gray);
        font-weight: 700;
        color: var(--brand-dark);
        text-transform: uppercase;
        font-size: 0.875rem;
        letter-spacing: 0.05em;
      }

      .comparison-table td {
        color: var(--brand-mid-gray);
      }

      .comparison-table tr:last-child td {
        border-bottom: none;
      }

      .check-icon {
        color: var(--brand-green);
        font-weight: 700;
        font-size: 1.25rem;
      }

      .cross-icon {
        color: var(--brand-light-gray);
        font-weight: 700;
        font-size: 1.25rem;
      }

      /* Roadmap */
      .roadmap-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(18rem, 1fr));
        gap: 2rem;
      }

      .roadmap-card {
        background: var(--brand-light);
        border: 1px solid var(--brand-light-gray);
        border-radius: 1rem;
        padding: 2rem;
        transition: all 0.3s ease;
      }

      .roadmap-card:hover {
        border-color: var(--brand-orange);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
      }

      .roadmap-tier {
        display: inline-block;
        padding: 0.375rem 0.875rem;
        background: rgba(217, 119, 87, 0.1);
        color: var(--brand-orange);
        font-size: 0.75rem;
        font-weight: 700;
        border-radius: 2rem;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 1rem;
      }

      .roadmap-plugin {
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 0.5rem;
      }

      .roadmap-description {
        color: var(--brand-mid-gray);
        font-size: 0.875rem;
        line-height: 1.6;
      }

      .roadmap-quarter {
        font-size: 0.75rem;
        color: var(--brand-orange);
        font-weight: 600;
        margin-top: 1rem;
      }

      /* FAQ */
      .faq-grid {
        max-width: 50rem;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
      }

      .faq-item {
        background: var(--brand-light);
        border: 1px solid var(--brand-light-gray);
        border-radius: 1rem;
        padding: 2rem;
      }

      .faq-question {
        font-size: 1.125rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 0.75rem;
      }

      .faq-answer {
        color: var(--brand-mid-gray);
        line-height: 1.6;
      }

      /* Success Stories */
      .success-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(20rem, 1fr));
        gap: 2rem;
      }

      .success-card {
        background: var(--brand-light);
        border: 1px solid var(--brand-light-gray);
        border-radius: 1rem;
        padding: 2rem;
      }

      .success-industry {
        font-size: 0.75rem;
        font-weight: 700;
        color: var(--brand-orange);
        text-transform: uppercase;
        letter-spacing: 0.05em;
        margin-bottom: 0.5rem;
      }

      .success-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--brand-dark);
        margin-bottom: 1rem;
      }

      .success-result {
        font-weight: 600;
        color: var(--brand-green);
        margin-bottom: 0.5rem;
      }

      .success-tech {
        font-size: 0.875rem;
        color: var(--brand-mid-gray);
        margin-bottom: 1rem;
      }

      .success-quote {
        font-style: italic;
        color: var(--brand-mid-gray);
        border-left: 3px solid var(--brand-orange);
        padding-left: 1rem;
        margin-top: 1rem;
      }

      /* Final CTA */
      .final-cta {
        background: linear-gradient(135deg, var(--brand-orange) 0%, var(--brand-orange-dark) 100%);
        padding: 4rem 1rem;
        text-align: center;
        color: var(--brand-light);
      }

      .final-cta h2 {
        font-size: clamp(2rem, 4vw, 2.5rem);
        font-weight: 800;
        margin-bottom: 1rem;
        color: var(--brand-light);
      }

      .final-cta p {
        font-size: 1.125rem;
        margin-bottom: 2rem;
        opacity: 0.95;
      }

      .final-cta .cta-primary {
        background: var(--brand-light);
        color: var(--brand-orange);
      }

      .final-cta .cta-primary:hover {
        background: rgba(250, 249, 245, 0.9);
      }

      /* Responsive */
      @media (max-width: 768px) {
        .sponsor-hero {
          padding: 3rem 1rem;
        }

        .sponsor-hero h1 {
          font-size: 2rem;
        }

        .pricing-grid,
        .roadmap-grid,
        .success-grid {
          grid-template-columns: 1fr;
        }

        .comparison-table {
          font-size: 0.875rem;
        }

        .comparison-table th,
        .comparison-table td {
          padding: 0.75rem 0.5rem;
        }
      }
    </style>
  </head>
